<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:ctx="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context.xsd">

    <!--suppress RequiredBeanTypeInspection -->
    <ctx:property-placeholder properties-ref="elasticSearchProperties"/>

    <bean id="elasticSearchConfiguration" class="org.springframework.beans.factory.config.PropertiesFactoryBean">
        <property name="location" value="${fulltextsearch.propertyfile}"/>
    </bean>

    <bean id="esServer" class="com.humanet.elasticsearch.internal.ElasticSearchServer" init-method="start" destroy-method="stop">
        <constructor-arg ref="elasticSearchConfiguration"/>
    </bean>


</beans>
